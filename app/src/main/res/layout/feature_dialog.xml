<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_outside_shape">

    <LinearLayout
        android:id="@+id/dialogFeatureItem"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_outside_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etSaveFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/raleway"
            android:lineHeight="24dp"
            android:text="Input text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/saveFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/final_add_button_outline"
            android:fontFamily="@font/raleway_medium"
            android:text="Save"
            android:textColor="#996B5596"
            android:textSize="24sp" />

        <Button
            android:id="@+id/deleteFeature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/delete_button"
            android:fontFamily="@font/raleway_medium"
            android:text="Delete"
            android:textColor="#99ff7878"
            android:textSize="24sp" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>